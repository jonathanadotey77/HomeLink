# Set HOMELINK_ROOT
SOURCE=${BASH_SOURCE[0]}
HOMELINK_ROOT_DIR=''
while [ -L "$SOURCE" ]; do
  HOMELINK_ROOT_DIR=$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )
  SOURCE=$(readlink "$SOURCE")
  [[ $SOURCE != /* ]] && SOURCE=$HOMELINK_ROOT_DIR/$SOURCE 
done

HOMELINK_ROOT_DIR=($( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd ))
HOMELINK_ROOT_DIR=$(dirname $HOMELINK_ROOT_DIR)

export HOMELINK_ROOT=$HOMELINK_ROOT_DIR

if [[ -v HOMELINK_CLI_CONFIG_PATH ]]; then
    export HOMELINK_CLI_CONFIG_PATH=$HOMELINK_CLI_CONFIG_PATH
else
    mkdir $HOMELINK_ROOT/config/ >/dev/null 2>&1
    if [ ! -f $HOMELINK_ROOT/config/cli_config.conf ]; then
        touch $HOMELINK_ROOT/config/cli_config.conf
        echo "server_address 192.168.1.1" >> $HOMELINK_ROOT/config/cli_config.conf
        echo "server_control_port 10000" >> $HOMELINK_ROOT/config/cli_config.conf
        echo "server_data_port 10001" >> $HOMELINK_ROOT/config/cli_config.conf
    fi

    export HOMELINK_CLI_CONFIG_PATH=$HOMELINK_ROOT/config/cli_config.conf
fi

current_directory=$(pwd)

$HOMELINK_ROOT/build/applications/homelink_cli $@

cd $current_directory